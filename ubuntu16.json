            "disk_size": "{{user `disk_size`}}",
            "disk_type": "{{user `disk_type`}}",
            "network": "{{user `network`}}",
            "tags": "{{user `tags`}}"
        }
    ],
    "provisioners": [
	{
	"type": "shell",
	"inline": "git clone https://github.com/MironovVadim/gcp-configuration.git"},
	{
            "type": "shell",
            "inline": ". ./gcp-configuration/config-scripts/install_ruby.sh"
        }, {
            "type": "shell",
            "inline": ". ./gcp-configuration/config-scripts/install_mongodb.sh"
        }, {
            "type": "shell",
            "inline": ". ./gcp-configuration/config-scripts/deploy.sh"
        }
    ]
